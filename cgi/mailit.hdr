'function validar_mail(str){
    var valido;
    var filter = /^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i;
    if(filter.test(str))
      valido = true;
    else{
      alert("ATENÇÃO! Endereço de e-mail inválido.");
      document.getElementById("Destino").focus();
      valido = false;
    }
    return valido;
  }'/

